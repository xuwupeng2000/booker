<div class="row mt3">
  <div class="col-12">
    <h3>Barbers</h3>
    <p>Shop owner should be able to manage barbers from there</p>
  </div>
  <div class="col-12">
    <div class="flex justify-end mv3">
      <%= link_to 'Add', new_shop_barber_path(@shop), class: "btn btn-outline-primary" %>
    </div>

    <table class="table table-striped">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Shop</th>
        <th></th>
      </tr>
      <% @barbers.each do |b| %>
        <tr>
          <td><%= b.name %></td>
          <td><%= b.description %></td>
          <td><%= link_to b.shop.name, admin_shop_path(b.shop) %></td>
          <td><%= link_to "View", shop_barber_path(@shop, b) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
