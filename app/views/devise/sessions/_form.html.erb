<%= simple_form_for @user, url: user_session_path do |f| %>
  <%= f.input :email,
              required: false,
              autofocus: true,
              input_html: { autocomplete: "email", class: "w-100" } %>
  <%= f.input :password,
              required: false,
              input_html: { autocomplete: "current-password", class: "w-100" } %>
  <%= f.input :remember_me, as: :boolean, input_html: { class: "mr3" } %>

  <div class="ma3">
    <%= f.button :submit, value: "Log in", class: "btn btn-pill btn-block btn-outline-primary" %>
  </div>
<% end %>

