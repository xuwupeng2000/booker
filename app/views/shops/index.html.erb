<div class="row mt3">
  <div class="col">
    <h3>Shops</h3>

    <table class="table table-striped">
      <tr>
        <th>Name</th>
        <th>City</th>
        <th>Address</th>
        <th>Description</th>
        <th></th>
      </tr>
      <% @shops.each do |s| %>
        <tr>
          <td><%= s.name %></td>
          <td><%= s.city %></td>
          <td><%= s.address %></td>
          <td><%= s.description %></td>
          <td><%= link_to "View", shop_path(s) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
